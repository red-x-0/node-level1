<!DOCTYPE html>
<html lang="en" data-bs-theme="auto">
  <head>
    <script src="../../js/color-modes.js"></script>
    <link
      rel="stylesheet"
      href="../../bootstrap-icons-1.10.5/font/bootstrap-icons.min.css"
    />
    <link rel="shortcut icon" href="../../img/ali.png" type="image/x-icon">

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta
      name="author"
      content="Mark Otto, Jacob Thornton, and Bootstrap contributors"
    />
    <meta name="generator" content="Hugo 0.112.5" />
    <title><%= customer.firstName %>&nbsp;<%= customer.lastName %></title>

    <link href="../../css/bootstrap.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="../../css/dark-light.css">


    <!-- Custom styles for this template -->
    <link href="../../css/sidebars.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../css/myStyle.css" />
  </head>
  <body>
    <%- include('../Components/dark-light.ejs') %>

    <main class="d-flex flex-nowrap">
      <%- include('../Components/sidebar.ejs', {currentPage: "view"}) %>


      <section class="w-100">
        <%- include('../Components/navbar.ejs') %>

        <nav
          style="width: 88%"
          class="px-2 mt-4 d-flex flex-wrap justify-content-between"
          aria-label="breadcrumb"
        >
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">
              <%= customer.firstName %>&nbsp;<%= customer.lastName %>
            </li>
          </ol>

          <p class=" ">
            <span class="fw-medium fs-6">Id :</span> <%= customer._id %>
          </p>
        </nav>
        <div class="right">
          <a data-bs-toggle="tooltip" data-bs-title="Edit user" data-bs-placement="top" class="btn btn-primary btn-sm" href="/customer/edit/<%= customer._id %>">
            <i class="bi bi-pencil"></i>
          </a>
          <button data-bs-toggle="modal" data-bs-target="#exampleModal" type="button" data-bs-toggle="tooltip" data-bs-title="Delete user" data-bs-placement="top" class="btn btn-danger btn-sm">
            <i class="bi bi-trash"></i>
          </button>
        </div>
        <table
          style="width: 88%"
          class="ms-1 table mt-5 table-striped table-bordered"
        >
          <thead>
            <tr>
              <th scope="col">First Name</th>
              <th class="fw-normal" scope="col"><%= customer.firstName %></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <th scope="row">Last Name</th>
              <td><%= customer.lastName %></td>
            </tr>

            <tr>
              <th scope="row">Phone Number</th>
              <td><%= customer.phoneNumber ? customer.phoneNumber : "Not Insearted" %></td>
            </tr>

            <tr>
              <th scope="row">Email</th>
              <td><%= customer.email ? customer.email : "Not Insearted" %></td>
            </tr>

            <tr>
              <th scope="row">Gender</th>
              <td><%= customer.gender %></td>
            </tr>

            <tr>
              <th scope="row">Age</th>
              <td><%= customer.age %></td>
            </tr>

            <tr>
              <th scope="row">Country</th>
              <td><%= customer.country %></td>
            </tr>

            <tr>
              <th scope="row">Created on</th>
              <td><%= customer.createdAt %></td>
            </tr>

            <tr>
              <th scope="row">Last Update</th>
              <td><%= customer.updatedAt %></td>
            </tr>
          </tbody>
        </table>
      </section>
    </main>
    <%- include('../Components/deleteForm.ejs') %>
  </main>
  <script src="../../js/bootstrap.bundle.min.js"></script>
  <script src="../../js/sidebars.js"></script>
  <script src="../../js/main.js"></script>
  </body>
</html>
